      <a class="navbar-brand"><b>ReviveMart</b></a>

      <% if(isAdmin=="false") {%>
      <a href="/add/<%= data._id %>" class="profile">  <img src="<%= data.image.url %>" alt="" class="pimg"><%= data.name %></a>

      <% } %>
