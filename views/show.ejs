   <!DOCTYPE html>
   <html lang="en">
   <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/show.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

   </head>
   <body>

    <div class="container text-center">
      <div class="row">
        <div class="col">
          <img src="<%= listing.image[0].url %>" class="card-img-top " height="300px" >
         </div>
        <div class="col description">
          <br> <h3><%=listing.name %></h3><hr>
          <br> <h5>Description: <%=listing.description %></h5> 

          <hr>
        <h3>Product-Details</h3>
          <br><h5 class="rupee">Price:&#x20b9; <%=listing.price.toLocaleString("en-IN") %>
          </h5>
         <!-- <br> <h5><%=listing.description %></h5>  -->
          <br><h5>catagory:<%=listing.catagory %></h5>
           <br> <h5>Purchased-Year:<%=listing.age %>-year/old </h5>
           <br> <h5>Other:<%=listing.other%>-Available</h5><br>
           <hr>
           <h3>Seller-Details</h3>
           <h5>Name:  <%= data.User[0].name%></h5>
           <h5>EmailId:  <%= data.User[0].emailid%></h5>
           
<hr>
        <h3>
          <form action="/bids/<%=listing._id %>/<%= listing.User %>/<%= userid %>" method="get">
          Bids:           <input type="submit" value="NewBids">

          </form>
        </h3>
        <br><br>
        <div >
          <% for(bids of bidings) {%>
            <h6>
            Name:<%=bids.buyer %>
            <br>
            BidAmount:<%=bids.bidamount %>
            <br>
            BidPlacedOn:<%=bids.createAt.toString().slice(0,10) %>
            </h6>
            <% } %>
        </div>
        </div>
      </div>
    </div>
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

   </body>
   </html>
       
       
       
       

















       
       
       